			</div>
			
			<!-- Diseño 5 -->
			<div class="design-content" data-design="diseño5" style="display: none;">
				<Hero5 />
				<About5 />
				<Skills5 />
				<Projects5 />
				<Contact5 />
			</div>
			
			<!-- Diseño 6 -->
			<div class="design-content" data-design="diseño6" style="display: none;">
