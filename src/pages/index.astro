	/* Scrollbar personalizada - Diseño 1 (Default) */
	body:not(.design-2):not(.design-3):not(.design-4):not(.design-5):not(.design-6):not(.design-7) ::-webkit-scrollbar {
		width: 12px;
	}

	body:not(.design-2):not(.design-3):not(.design-4):not(.design-5):not(.design-6):not(.design-7) ::-webkit-scrollbar-track {
		background: #f1f1f1;
		border-radius: 10px;
	}

