	<script>
		// Sistema de cambio de diseño
		function changeDesign(designKey: string) {
			const allDesigns = document.querySelectorAll('.design-content');
			const selectedDesign = document.querySelector(`[data-design="${designKey}"]`) as HTMLElement | null;
			
			// Si el diseño seleccionado ya está visible, no hacer nada
			if (selectedDesign && !selectedDesign.classList.contains('fade-out') && selectedDesign.style.display !== 'none') {
				return;
			}
			
			// Fade out de todos los diseños visibles
			allDesigns.forEach(design => {
				const designElement = design as HTMLElement;
				if (designElement.style.display !== 'none' && !designElement.classList.contains('fade-out')) {
					designElement.classList.add('fade-out');
				}
			});
			
			// Después de la animación de fade out, cambiar el contenido
			setTimeout(() => {
				// Ocultar todos los diseños
				allDesigns.forEach(design => {
					const designElement = design as HTMLElement;
					designElement.style.display = 'none';
					designElement.classList.remove('fade-out', 'fade-in');
				});
				
				// Mostrar y hacer fade in del diseño seleccionado
				if (selectedDesign) {
					selectedDesign.style.display = 'block';
					// Pequeño delay para asegurar que el display se aplica antes de la animación
					setTimeout(() => {
						selectedDesign.classList.add('fade-in');
					}, 10);
				}
			}, 400); // Duración de la animación fade-out
			
			// Actualizar color del header según el diseño (con transición suave)
			const header = document.querySelector('.main-header') as HTMLElement | null;
			const body = document.body;
			
			if (header && body) {
				// Remover clases de diseño anteriores del header y body
				header.classList.remove('design-1', 'design-2', 'design-3', 'design-4', 'design-5', 'design-6', 'design-7');
				body.classList.remove('design-1', 'design-2', 'design-3', 'design-4', 'design-5', 'design-6', 'design-7');
				
				// Añadir clase al body para los estilos de scrollbar
				// El diseño 1 no necesita clase, usa los estilos por defecto
				if (designKey === 'diseño2') {
					body.classList.add('design-2');
				} else if (designKey === 'diseño3') {
					body.classList.add('design-3');
				} else if (designKey === 'diseño4') {
					body.classList.add('design-4');
				} else if (designKey === 'diseño5') {
					body.classList.add('design-5');
				} else if (designKey === 'diseño6') {
					body.classList.add('design-6');
				} else if (designKey === 'diseño7') {
					body.classList.add('design-7');
				}
				// Si es diseño 1, no añadimos ninguna clase al body (usa estilos por defecto)
				
				// Aplicar nueva clase de diseño después de un pequeño delay para la transición
				setTimeout(() => {
					if (designKey === 'diseño1') {
						header.classList.add('design-1');
						if (header.classList.contains('scrolled')) {
							header.style.backgroundColor = '#667eea';
						}
					} else if (designKey === 'diseño2') {
						header.classList.add('design-2');
						if (header.classList.contains('scrolled')) {
							header.style.backgroundColor = '#1a1f2e';
						}
					} else if (designKey === 'diseño3') {
						header.classList.add('design-3');
						if (header.classList.contains('scrolled')) {
							header.style.backgroundColor = '#1a1a1a';
						}
					} else if (designKey === 'diseño4') {
						header.classList.add('design-4');
						if (header.classList.contains('scrolled')) {
							header.style.backgroundColor = '#ffffff';
						}
					} else if (designKey === 'diseño5') {
						header.classList.add('design-5');
						if (header.classList.contains('scrolled')) {
							header.style.backgroundColor = '#ffffff';
						}
					} else if (designKey === 'diseño6') {
						header.classList.add('design-6');
						if (header.classList.contains('scrolled')) {
							header.style.backgroundColor = '#ffffff';
						}
					} else if (designKey === 'diseño7') {
						header.classList.add('design-7');
						if (header.classList.contains('scrolled')) {
							header.style.backgroundColor = '#faf8f3';
						}
					}
				}, 200); // Delay para sincronizar con la transición del contenido
			}
			
			// Guardar preferencia
			localStorage.setItem('selectedDesign', designKey);
			
			// Actualizar header después de cambiar diseño
			setTimeout(updateHeader, 500);
		}
		
		// Inicializar selector de diseño
		document.addEventListener('DOMContentLoaded', () => {
			const designSelect = document.getElementById('designSelect') as HTMLSelectElement | null;
			if (designSelect) {
				// Cargar diseño guardado
				const savedDesign = localStorage.getItem('selectedDesign') || 'diseño1';
				designSelect.value = savedDesign;
				
				// Mostrar el diseño inicial sin animación de fade-out
				const allDesigns = document.querySelectorAll('.design-content');
				allDesigns.forEach(design => {
					const designElement = design as HTMLElement;
					designElement.style.display = 'none';
				});
				
				const initialDesign = document.querySelector(`[data-design="${savedDesign}"]`) as HTMLElement | null;
				if (initialDesign) {
					initialDesign.style.display = 'block';
					// Aplicar fade-in después de un pequeño delay para que se vea la animación inicial
					setTimeout(() => {
						initialDesign.classList.add('fade-in');
					}, 50);
				}
				
				// Aplicar estilos del header para el diseño inicial (sin cambiar el contenido)
				const header = document.querySelector('.main-header') as HTMLElement | null;
				const body = document.body;
				
				if (header && body) {
					header.classList.remove('design-1', 'design-2', 'design-3', 'design-4', 'design-5', 'design-6', 'design-7');
					body.classList.remove('design-1', 'design-2', 'design-3', 'design-4', 'design-5', 'design-6', 'design-7');
					
					if (savedDesign === 'diseño1') {
						header.classList.add('design-1');
					} else if (savedDesign === 'diseño2') {
						header.classList.add('design-2');
						body.classList.add('design-2');
					} else if (savedDesign === 'diseño3') {
						header.classList.add('design-3');
						body.classList.add('design-3');
					} else if (savedDesign === 'diseño4') {
						header.classList.add('design-4');
						body.classList.add('design-4');
					} else if (savedDesign === 'diseño5') {
						header.classList.add('design-5');
						body.classList.add('design-5');
					} else if (savedDesign === 'diseño6') {
						header.classList.add('design-6');
						body.classList.add('design-6');
					} else if (savedDesign === 'diseño7') {
						header.classList.add('design-7');
						body.classList.add('design-7');
					}
					setTimeout(updateHeader, 100);
				}
				
				// Escuchar cambios
				designSelect.addEventListener('change', (e) => {
					const target = e.target as HTMLSelectElement;
					if (target) {
						changeDesign(target.value);
					}
				});
			}
		});
		
		// Función para actualizar header al hacer scroll
		function updateHeader() {
			const header = document.querySelector('.main-header') as HTMLElement | null;
			const hero = document.querySelector('#hero') as HTMLElement | null;
			const designSelect = document.getElementById('designSelect') as HTMLSelectElement | null;
			
			if (!hero || !header) return;
			
			const heroBottom = hero.offsetTop + hero.offsetHeight;
			const scrollPosition = window.scrollY;
			const currentDesign = designSelect ? designSelect.value : 'diseño1';
			
			if (scrollPosition > heroBottom - 100) {
				header.classList.add('scrolled');
				// Mantener el color del diseño cuando está scrolled
				if (currentDesign === 'diseño1') {
					header.style.backgroundColor = '#667eea';
				} else if (currentDesign === 'diseño2') {
					header.style.backgroundColor = '#1a1f2e';
				} else if (currentDesign === 'diseño3') {
					header.style.backgroundColor = '#1a1a1a';
				} else if (currentDesign === 'diseño4') {
					header.style.backgroundColor = '#ffffff';
				} else if (currentDesign === 'diseño5') {
					header.style.backgroundColor = '#ffffff';
				} else if (currentDesign === 'diseño6') {
					header.style.backgroundColor = '#ffffff';
				} else if (currentDesign === 'diseño7') {
					header.style.backgroundColor = '#faf8f3';
				}
				
				// Asegurar que las clases de diseño estén presentes
				header.classList.remove('design-1', 'design-2', 'design-3', 'design-4', 'design-5', 'design-6', 'design-7');
				if (currentDesign === 'diseño1') {
					header.classList.add('design-1');
				} else if (currentDesign === 'diseño2') {
					header.classList.add('design-2');
				} else if (currentDesign === 'diseño3') {
					header.classList.add('design-3');
				} else if (currentDesign === 'diseño4') {
					header.classList.add('design-4');
				} else if (currentDesign === 'diseño5') {
					header.classList.add('design-5');
				} else if (currentDesign === 'diseño6') {
					header.classList.add('design-6');
				} else if (currentDesign === 'diseño7') {
					header.classList.add('design-7');
				}
			} else {
				header.classList.remove('scrolled');
				// Color transparente cuando está sobre el hero
				if (currentDesign === 'diseño4' || currentDesign === 'diseño5' || currentDesign === 'diseño6') {
					header.style.backgroundColor = 'rgba(255, 255, 255, 0.85)';
				} else if (currentDesign === 'diseño7') {
					header.style.backgroundColor = 'rgba(250, 248, 243, 0.9)';
				} else {
					header.style.backgroundColor = 'rgba(255, 255, 255, 0.1)';
				}
			}
		}
		
		// Verificar al cargar
		document.addEventListener('DOMContentLoaded', () => {
			updateHeader();
		});
		
		// Verificar al hacer scroll
		window.addEventListener('scroll', updateHeader);
	</script>
</html>

<style>
