</section>

<style>
	.skills {
		padding: 5rem 2rem;
		background: linear-gradient(135deg, #f5f1e8 0%, #faf8f3 100%);
		position: relative;
	}

	.skills::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-image: 
			repeating-linear-gradient(
				90deg,
				transparent,
				transparent 20px,
				rgba(212, 175, 55, 0.02) 20px,
				rgba(212, 175, 55, 0.02) 40px
			);
		pointer-events: none;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		position: relative;
		z-index: 1;
	}

	.section-header {
		text-align: center;
		margin-bottom: 3rem;
	}

	.section-icon {
		font-size: 3rem;
		color: #d4af37;
		margin-bottom: 1rem;
		text-shadow: 0 2px 8px rgba(212, 175, 55, 0.3);
	}

	.section-title {
		font-family: 'Georgia', 'Times New Roman', serif;
		font-size: 2.5rem;
		color: #2c1810;
		margin: 0 0 1rem 0;
		font-weight: 700;
		letter-spacing: 2px;
		text-transform: uppercase;
	}

	.section-underline {
		width: 150px;
		height: 3px;
		background: linear-gradient(90deg, transparent, #d4af37, transparent);
		margin: 0 auto;
		position: relative;
	}

	.section-underline::before,
	.section-underline::after {
		content: '‚öú';
		position: absolute;
		top: 50%;
		transform: translateY(-50%);
		color: #d4af37;
		font-size: 1rem;
	}

	.section-underline::before {
		left: -30px;
	}

	.section-underline::after {
		right: -30px;
	}

	.skills-temple {
		background: rgba(255, 255, 255, 0.7);
		border: 3px solid #d4af37;
		border-radius: 8px;
		padding: 3rem;
		box-shadow: 
			0 0 0 2px rgba(212, 175, 55, 0.2),
			0 20px 60px rgba(0, 0, 0, 0.1),
			inset 0 0 50px rgba(255, 255, 255, 0.5);
		position: relative;
	}

	.skills-temple::before {
		content: '';
		position: absolute;
		top: -3px;
		left: -3px;
		right: -3px;
		bottom: -3px;
		background: linear-gradient(45deg, #d4af37, #f4d03f, #d4af37);
		border-radius: 8px;
		z-index: -1;
		opacity: 0.2;
	}

	.skills-columns {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
		margin-bottom: 3rem;
	}

	.skill-pillar {
		background: rgba(255, 255, 255, 0.9);
		border: 2px solid #d4af37;
		border-radius: 8px;
		padding: 1.5rem;
		box-shadow: 
			0 0 0 1px rgba(212, 175, 55, 0.2),
			0 10px 30px rgba(0, 0, 0, 0.08);
		position: relative;
	}

	.skill-pillar::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 4px;
		background: linear-gradient(90deg, #d4af37, #f4d03f, #d4af37);
		border-radius: 8px 8px 0 0;
	}

	.pillar-header {
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-bottom: 1.5rem;
		padding-bottom: 1rem;
		border-bottom: 2px solid rgba(212, 175, 55, 0.3);
	}

	.skill-icon {
		font-size: 2rem;
		width: 50px;
		height: 50px;
		display: flex;
		align-items: center;
		justify-content: center;
		background: rgba(212, 175, 55, 0.1);
		border-radius: 50%;
		border: 2px solid #d4af37;
	}

	h3 {
		font-family: 'Georgia', 'Times New Roman', serif;
		font-size: 1.3rem;
		color: #2c1810;
		margin: 0;
		font-weight: 700;
		letter-spacing: 1px;
	}

	.pillar-body {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.skill-level-display {
		text-align: center;
	}

	.level-value {
		font-family: 'Georgia', 'Times New Roman', serif;
		font-size: 2.5rem;
		color: #d4af37;
		font-weight: 700;
		text-shadow: 0 2px 8px rgba(212, 175, 55, 0.3);
		margin-bottom: 0.25rem;
	}

	.level-label {
		font-size: 0.85rem;
		color: #8b7355;
		text-transform: uppercase;
		letter-spacing: 2px;
		font-weight: 600;
	}

	.skill-bar-temple {
		height: 12px;
		background: rgba(212, 175, 55, 0.2);
		border-radius: 6px;
		overflow: hidden;
		border: 1px solid #d4af37;
		position: relative;
	}

	.skill-fill-divine {
		height: 100%;
		background: linear-gradient(90deg, #d4af37 0%, #f4d03f 50%, #d4af37 100%);
		border-radius: 6px;
		box-shadow: 
			0 0 10px rgba(212, 175, 55, 0.5),
			inset 0 1px 0 rgba(255, 255, 255, 0.3);
		transition: width 0.6s ease;
		position: relative;
	}

	.skill-fill-divine::after {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(
			90deg,
			transparent 0%,
			rgba(255, 255, 255, 0.3) 50%,
			transparent 100%
		);
		animation: shimmer 2s infinite;
	}

	@keyframes shimmer {
		0% { transform: translateX(-100%); }
		100% { transform: translateX(100%); }
	}

	.technologies-altar {
		text-align: center;
		padding-top: 2rem;
		border-top: 3px solid #d4af37;
	}

	.altar-title {
		font-family: 'Georgia', 'Times New Roman', serif;
		font-size: 1.5rem;
		color: #2c1810;
		margin: 0 0 1.5rem 0;
		font-weight: 700;
		letter-spacing: 1px;
		text-transform: uppercase;
	}

	.tech-symbols {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
		justify-content: center;
	}

	.tech-symbol {
		padding: 0.75rem 1.5rem;
		background: rgba(212, 175, 55, 0.1);
		color: #2c1810;
		border: 2px solid #d4af37;
		border-radius: 6px;
		font-weight: 600;
		font-size: 0.9rem;
		letter-spacing: 1px;
		box-shadow: 
			0 0 0 1px rgba(212, 175, 55, 0.2),
			0 4px 10px rgba(0, 0, 0, 0.05);
		transition: all 0.3s ease;
		text-transform: uppercase;
	}

	.tech-symbol:hover {
		background: #d4af37;
		color: #2c1810;
		transform: translateY(-2px);
		box-shadow: 
			0 0 0 1px rgba(212, 175, 55, 0.2),
			0 6px 15px rgba(212, 175, 55, 0.3);
	}

	@media (max-width: 768px) {
		.skills-columns {
			grid-template-columns: 1fr;
		}

		.skills-temple {
			padding: 2rem 1.5rem;
		}
	}
</style>

