// Skills component - Dise√±o 5 (Red Social Style)
const skills = [
	{ name: 'React', level: 92 },
	{ name: 'Node.js', level: 88 },
	{ name: 'TypeScript', level: 90 },
	{ name: 'Python', level: 85 },
	{ name: 'MongoDB', level: 80 },
	{ name: 'PostgreSQL', level: 82 },
];
---

<section class="skills" id="skills">
	<div class="container">
		<div class="skills-feed">
			{skills.map((skill) => (
				<div class="skill-card">
					<div class="card-header">
						<div class="skill-icon">üíª</div>
						<div class="skill-info">
							<h3>{skill.name}</h3>
							<span>{skill.level}% de dominio</span>
						</div>
					</div>
					<div class="skill-progress-bar">
						<div class="skill-progress" style={`width: ${skill.level}%`}></div>
					</div>
					<div class="card-actions">
						<button class="action-btn">
							<span>üëç</span>
							<span>12</span>
						</button>
						<button class="action-btn">
							<span>üí¨</span>
							<span>3</span>
						</button>
						<button class="action-btn">
							<span>‚ÜóÔ∏è</span>
						</button>
					</div>
				</div>
			))}
		</div>
	</div>
</section>

<style>
	.skills {
		background: #f0f2f5;
		padding: 2rem 1rem;
	}

	.container {
		max-width: 900px;
		margin: 0 auto;
	}

	.skills-feed {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.skill-card {
		background: #ffffff;
		border-radius: 8px;
		padding: 1.5rem;
		box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
	}

	.card-header {
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-bottom: 1rem;
	}

	.skill-icon {
		font-size: 2rem;
		width: 50px;
		height: 50px;
		display: flex;
		align-items: center;
		justify-content: center;
		background: #f0f2f5;
		border-radius: 50%;
	}

	.skill-info {
		flex: 1;
	}

	h3 {
		font-size: 1.1rem;
		color: #1c1e21;
		margin: 0 0 0.25rem 0;
		font-weight: 600;
	}

	.skill-info span {
		color: #65676b;
		font-size: 0.85rem;
	}

	.skill-progress-bar {
		height: 8px;
		background: #e4e6eb;
		border-radius: 4px;
		overflow: hidden;
		margin-bottom: 1rem;
	}

	.skill-progress {
		height: 100%;
		background: linear-gradient(90deg, #1877f2 0%, #42a5f5 100%);
		border-radius: 4px;
		transition: width 0.6s ease;
	}

	.card-actions {
		display: flex;
		gap: 0.5rem;
		padding-top: 0.75rem;
		border-top: 1px solid #e4e6eb;
	}

	.action-btn {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.5rem 1rem;
		background: transparent;
		border: none;
		color: #65676b;
		font-size: 0.9rem;
		font-weight: 600;
		cursor: pointer;
		border-radius: 4px;
		transition: background 0.2s ease;
	}

	.action-btn:hover {
		background: #f0f2f5;
	}

	.action-btn span:first-child {
		font-size: 1rem;
	}
</style>

