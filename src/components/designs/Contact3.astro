---
// Contact component - Diseño 3 (Retro Classic Style)
---

<section class="contact" id="contact">
	<div class="container">
		<div class="retro-section-header">
			<h2 class="retro-title">
				<span class="title-bracket">[</span>
				CONTACTO
				<span class="title-bracket">]</span>
			</h2>
		</div>

		<div class="contact-layout">
			<div class="contact-info-panel">
				<div class="panel-header">
					<span class="panel-label">CONTACT.INFO</span>
				</div>
				<div class="panel-content">
					<div class="info-item">
						<span class="info-label">&gt; EMAIL:</span>
						<span class="info-value">alex@example.com</span>
					</div>
					<div class="info-item">
						<span class="info-label">&gt; PHONE:</span>
						<span class="info-value">+34 612 345 678</span>
					</div>
					<div class="info-item">
						<span class="info-label">&gt; LOCATION:</span>
						<span class="info-value">Barcelona, España</span>
					</div>
					<div class="social-section">
						<div class="social-label">SOCIAL LINKS:</div>
						<div class="social-links">
							<a href="#" class="social-link">
								<span class="link-prefix">[LINK]</span>
								<span class="link-text">LinkedIn</span>
							</a>
							<a href="#" class="social-link">
								<span class="link-prefix">[LINK]</span>
								<span class="link-text">GitHub</span>
							</a>
							<a href="#" class="social-link">
								<span class="link-prefix">[LINK]</span>
								<span class="link-text">Twitter</span>
							</a>
						</div>
					</div>
				</div>
			</div>

			<div class="contact-form-panel">
				<div class="panel-header">
					<span class="panel-label">SEND.MESSAGE</span>
				</div>
				<div class="panel-content">
					<form class="retro-form">
						<div class="form-line">
							<span class="form-prompt">&gt;</span>
							<label class="form-label">NAME:</label>
							<input 
								type="text" 
								name="name" 
								class="form-input"
								placeholder="Enter your name"
								required
							/>
						</div>
						<div class="form-line">
							<span class="form-prompt">&gt;</span>
							<label class="form-label">EMAIL:</label>
							<input 
								type="email" 
								name="email" 
								class="form-input"
								placeholder="your@email.com"
								required
							/>
						</div>
						<div class="form-line">
							<span class="form-prompt">&gt;</span>
							<label class="form-label">SUBJECT:</label>
							<input 
								type="text" 
								name="subject" 
								class="form-input"
								placeholder="Message subject"
								required
							/>
						</div>
						<div class="form-line textarea-line">
							<span class="form-prompt">&gt;</span>
							<label class="form-label">MESSAGE:</label>
							<textarea 
								name="message" 
								class="form-textarea"
								rows="5"
								placeholder="Type your message here..."
								required
							></textarea>
						</div>
						<button type="submit" class="submit-btn">
							<span class="btn-prefix">[SEND]</span>
							<span class="btn-text">SUBMIT MESSAGE</span>
						</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.contact {
		padding: 5rem 2rem;
		background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
		position: relative;
	}

	.contact::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-image: 
			repeating-linear-gradient(
				90deg,
				transparent,
				transparent 10px,
				rgba(0, 255, 0, 0.02) 10px,
				rgba(0, 255, 0, 0.02) 20px
			);
		pointer-events: none;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		position: relative;
		z-index: 1;
	}

	.retro-section-header {
		text-align: center;
		margin-bottom: 3rem;
	}

	.retro-title {
		font-family: 'Courier New', monospace;
		font-size: 2.5rem;
		color: #ff8c00;
		text-transform: uppercase;
		letter-spacing: 4px;
		text-shadow: 
			0 0 10px #ff8c00,
			0 0 20px rgba(255, 140, 0, 0.5);
	}

	.title-bracket {
		color: #00ff00;
		font-size: 3rem;
		margin: 0 0.5rem;
	}

	.contact-layout {
		display: grid;
		grid-template-columns: 1fr 1.5fr;
		gap: 2rem;
	}

	.contact-info-panel,
	.contact-form-panel {
		background: #0a0a0a;
		border: 4px solid #00ff00;
		box-shadow: 
			0 0 0 2px #1a1a1a,
			0 0 20px rgba(0, 255, 0, 0.3),
			inset 0 0 30px rgba(0, 0, 0, 0.8);
	}

	.panel-header {
		background: #00ff00;
		padding: 0.75rem 1rem;
		border-bottom: 2px solid #1a1a1a;
	}

	.panel-label {
		font-family: 'Courier New', monospace;
		font-size: 0.9rem;
		font-weight: bold;
		color: #000;
		text-transform: uppercase;
		letter-spacing: 2px;
	}

	.panel-content {
		padding: 1.5rem;
		font-family: 'Courier New', monospace;
	}

	.info-item {
		display: flex;
		gap: 0.75rem;
		margin-bottom: 1rem;
		align-items: center;
	}

	.info-label {
		color: #ff8c00;
		font-weight: bold;
		min-width: 100px;
	}

	.info-value {
		color: #00ff00;
		flex: 1;
	}

	.social-section {
		margin-top: 2rem;
		padding-top: 1.5rem;
		border-top: 2px dashed #00ff00;
	}

	.social-label {
		color: #ff8c00;
		font-weight: bold;
		margin-bottom: 1rem;
		display: block;
	}

	.social-links {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.social-link {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: #00ff00;
		text-decoration: none;
		padding: 0.5rem;
		border: 1px solid #00ff00;
		background: rgba(0, 255, 0, 0.05);
		transition: all 0.3s ease;
	}

	.social-link:hover {
		background: #00ff00;
		color: #000;
		box-shadow: 0 0 10px #00ff00;
	}

	.link-prefix {
		color: #ff8c00;
		font-size: 0.8rem;
	}

	.social-link:hover .link-prefix {
		color: #000;
	}

	.retro-form {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.form-line {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.textarea-line {
		align-items: flex-start;
	}

	.form-prompt {
		color: #ff8c00;
		font-weight: bold;
	}

	.form-label {
		color: #00ff00;
		font-weight: bold;
		min-width: 80px;
		text-transform: uppercase;
	}

	.form-input,
	.form-textarea {
		flex: 1;
		background: #1a1a1a;
		border: 2px solid #00ff00;
		color: #00ff00;
		padding: 0.75rem;
		font-family: 'Courier New', monospace;
		font-size: 0.9rem;
		transition: all 0.3s ease;
	}

	.form-input:focus,
	.form-textarea:focus {
		outline: none;
		background: #0a0a0a;
		box-shadow: 
			0 0 10px #00ff00,
			inset 0 0 10px rgba(0, 255, 0, 0.1);
	}

	.form-input::placeholder,
	.form-textarea::placeholder {
		color: #666;
	}

	.form-textarea {
		resize: vertical;
		min-height: 120px;
	}

	.submit-btn {
		background: #00ff00;
		border: 3px solid #00ff00;
		color: #000;
		padding: 1rem 2rem;
		font-family: 'Courier New', monospace;
		font-size: 1rem;
		font-weight: bold;
		text-transform: uppercase;
		letter-spacing: 2px;
		cursor: pointer;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
		transition: all 0.3s ease;
		box-shadow: 
			0 0 10px #00ff00,
			inset 0 0 10px rgba(0, 0, 0, 0.2);
	}

	.submit-btn:hover {
		background: #00cc00;
		box-shadow: 
			0 0 20px #00ff00,
			0 0 30px #00ff00,
			inset 0 0 10px rgba(0, 0, 0, 0.3);
		transform: translateY(-2px);
	}

	.btn-prefix {
		color: #000;
	}

	.btn-text {
		color: #000;
	}

	@media (max-width: 968px) {
		.contact-layout {
			grid-template-columns: 1fr;
		}

		.retro-title {
			font-size: 1.8rem;
		}

		.title-bracket {
			font-size: 2rem;
		}
	}
</style>
