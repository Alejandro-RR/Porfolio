---
// Skills component - Dise√±o 3 (Retro Classic Style)
const skills = [
	{ name: 'React', level: 92 },
	{ name: 'Node.js', level: 88 },
	{ name: 'TypeScript', level: 90 },
	{ name: 'Python', level: 85 },
	{ name: 'MongoDB', level: 80 },
	{ name: 'PostgreSQL', level: 82 },
	{ name: 'Docker', level: 75 },
	{ name: 'AWS', level: 70 },
];
---

<section class="skills" id="skills">
	<div class="container">
		<div class="retro-section-header">
			<h2 class="retro-title">
				<span class="title-bracket">[</span>
				HABILIDADES
				<span class="title-bracket">]</span>
			</h2>
		</div>

		<div class="skills-terminal">
			<div class="terminal-header">
				<span class="terminal-title">SKILLS.EXE</span>
				<div class="terminal-controls">
					<span class="control-btn"></span>
					<span class="control-btn"></span>
					<span class="control-btn"></span>
				</div>
			</div>
			<div class="terminal-body">
				<div class="terminal-line">
					<span class="prompt">C:\SKILLS&gt;</span>
					<span class="command">LOAD SKILLS</span>
				</div>
				<div class="terminal-line">
					<span class="output">Loading skills database...</span>
				</div>
				<div class="skills-list">
					{skills.map((skill) => (
						<div class="skill-item">
							<div class="skill-header">
								<span class="skill-name">{skill.name}</span>
								<span class="skill-percentage">{skill.level}%</span>
							</div>
							<div class="skill-bar-container">
								<div class="skill-bar">
									<div class="skill-progress" style={`width: ${skill.level}%`}>
										<span class="progress-text">{skill.level}%</span>
									</div>
								</div>
							</div>
						</div>
					))}
				</div>
				<div class="terminal-line">
					<span class="prompt">C:\SKILLS&gt;</span>
					<span class="cursor">_</span>
				</div>
			</div>
		</div>

		<div class="tech-panel">
			<div class="panel-header">
				<span class="panel-label">TECHNOLOGIES.LST</span>
			</div>
			<div class="tech-grid">
				<span class="tech-tag">React</span>
				<span class="tech-tag">Node.js</span>
				<span class="tech-tag">Python</span>
				<span class="tech-tag">MongoDB</span>
				<span class="tech-tag">PostgreSQL</span>
				<span class="tech-tag">Docker</span>
				<span class="tech-tag">AWS</span>
				<span class="tech-tag">GraphQL</span>
				<span class="tech-tag">Express</span>
				<span class="tech-tag">Redis</span>
				<span class="tech-tag">Kubernetes</span>
				<span class="tech-tag">TypeScript</span>
			</div>
		</div>
	</div>
</section>

<style>
	.skills {
		padding: 5rem 2rem;
		background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
		position: relative;
	}

	.skills::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-image: 
			repeating-linear-gradient(
				90deg,
				transparent,
				transparent 10px,
				rgba(0, 255, 0, 0.02) 10px,
				rgba(0, 255, 0, 0.02) 20px
			);
		pointer-events: none;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		position: relative;
		z-index: 1;
	}

	.retro-section-header {
		text-align: center;
		margin-bottom: 3rem;
	}

	.retro-title {
		font-family: 'Courier New', monospace;
		font-size: 2.5rem;
		color: #ff8c00;
		text-transform: uppercase;
		letter-spacing: 4px;
		text-shadow: 
			0 0 10px #ff8c00,
			0 0 20px rgba(255, 140, 0, 0.5);
	}

	.title-bracket {
		color: #00ff00;
		font-size: 3rem;
		margin: 0 0.5rem;
	}

	.skills-terminal {
		background: #0a0a0a;
		border: 4px solid #00ff00;
		box-shadow: 
			0 0 0 2px #1a1a1a,
			0 0 20px rgba(0, 255, 0, 0.3),
			inset 0 0 30px rgba(0, 0, 0, 0.8);
		margin-bottom: 2rem;
	}

	.terminal-header {
		background: #00ff00;
		padding: 0.75rem 1rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
		border-bottom: 2px solid #1a1a1a;
	}

	.terminal-title {
		font-family: 'Courier New', monospace;
		font-size: 0.9rem;
		font-weight: bold;
		color: #000;
		text-transform: uppercase;
		letter-spacing: 2px;
	}

	.terminal-controls {
		display: flex;
		gap: 0.5rem;
	}

	.control-btn {
		width: 12px;
		height: 12px;
		background: #1a1a1a;
		border: 1px solid #000;
	}

	.terminal-body {
		padding: 1.5rem;
		font-family: 'Courier New', monospace;
		color: #00ff00;
		min-height: 300px;
	}

	.terminal-line {
		margin-bottom: 0.75rem;
		font-size: 0.95rem;
	}

	.prompt {
		color: #ff8c00;
		margin-right: 0.5rem;
	}

	.command {
		color: #00ff00;
	}

	.output {
		color: #ffd700;
	}

	.cursor {
		animation: blink 1s infinite;
		color: #00ff00;
	}

	@keyframes blink {
		0%, 50% { opacity: 1; }
		51%, 100% { opacity: 0; }
	}

	.skills-list {
		margin: 1.5rem 0;
	}

	.skill-item {
		margin-bottom: 1.5rem;
	}

