---
// Hero component - Diseño 2 (D&D Character Sheet - Top Section)
---

<section class="hero" id="hero">
	<div class="dnd-sheet">
		<div class="sheet-top">
			<div class="character-info-left">
				<div class="name-field">
					<label>CHARACTER NAME</label>
					<div class="name-value">Alejandro Rojo Rubio</div>
				</div>
				<div class="info-grid">
					<div class="info-cell">
						<label>CLASS & LEVEL</label>
						<div class="cell-value">Front End Developer</div>
					</div>
					<div class="info-cell">
						<label>BACKGROUND</label>
						<div class="cell-value">Full Stack Regular</div>
					</div>
					<div class="info-cell">
						<label>RACE</label>
						<div class="cell-value">Human</div>
					</div>
					<div class="info-cell">
						<label>ALIGNMENT</label>
						<div class="cell-value">Lawful Good</div>
					</div>
					<div class="info-cell">
						<label>AGE</label>
						<div class="cell-value">28</div>
					</div>
					<div class="info-cell">
						<label>LANGUAGES</label>
						<div class="cell-value">ES, EN, JS</div>
					</div>
				</div>
			</div>

			<div class="portfolio-stats-right">
				<div class="stat-box main-stat">
					<label>PROYECTOS</label>
					<div class="stat-value-large">75+</div>
				</div>
				<div class="stats-grid">
					<div class="stat-box">
						<label>AÑOS EXPERIENCIA</label>
						<div class="stat-value">5</div>
					</div>
					<div class="stat-box">
						<label>CLIENTES</label>
						<div class="stat-value">30+</div>
					</div>
					<div class="stat-box">
						<label>TECNOLOGÍAS</label>
						<div class="stat-value">20+</div>
					</div>
					<div class="stat-box">
						<label>SATISFACCIÓN</label>
						<div class="stat-value">98%</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.hero {
		background: #0a0e1a;
		background-image: 
			linear-gradient(rgba(0, 212, 255, 0.03) 1px, transparent 1px),
			linear-gradient(90deg, rgba(0, 212, 255, 0.03) 1px, transparent 1px);
		background-size: 20px 20px;
		min-height: auto;
		padding: 3rem 2rem;
		padding-top: calc(3rem + 80px);
		position: relative;
		overflow-x: hidden;
	}

	.dnd-sheet {
		max-width: 1400px;
		margin: 0 auto;
		position: relative;
		z-index: 1;
	}

	.sheet-top {
		background: #1a1f2e;
		border: 3px solid #00d4ff;
		border-radius: 4px;
		padding: 2rem;
		display: grid;
		grid-template-columns: 2fr 1fr;
		gap: 2rem;
		box-shadow: 
			0 0 0 2px #0a0e1a,
			0 0 20px rgba(0, 212, 255, 0.2),
			inset 0 0 50px rgba(0, 0, 0, 0.3);
	}

	.character-info-left {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.name-field {
		border: 2px solid #00d4ff;
		border-radius: 4px;
		padding: 1rem;
		background: rgba(0, 212, 255, 0.05);
	}

	.name-field label {
		display: block;
		font-size: 0.7rem;
		font-weight: bold;
		color: #00d4ff;
		text-transform: uppercase;
		letter-spacing: 1px;
		margin-bottom: 0.5rem;
		font-family: 'Courier New', monospace;
	}

	.name-value {
		font-size: 1.5rem;
		color: #00d4ff;
		font-weight: bold;
		font-family: 'Courier New', monospace;
		text-shadow: 0 0 10px rgba(0, 212, 255, 0.5);
	}

	.info-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 1rem;
	}

	.info-cell {
		border: 2px solid #00d4ff;
		border-radius: 4px;
		padding: 0.75rem;
		background: rgba(0, 212, 255, 0.05);
	}

	.info-cell label {
		display: block;
		font-size: 0.65rem;
		font-weight: bold;
		color: #00d4ff;
		text-transform: uppercase;
		letter-spacing: 0.5px;
		margin-bottom: 0.5rem;
		font-family: 'Courier New', monospace;
	}

	.cell-value {
		font-size: 0.9rem;
		color: #00ffff;
		font-weight: 600;
		font-family: 'Courier New', monospace;
	}

	.portfolio-stats-right {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.stat-box {
		border: 2px solid #00d4ff;
		border-radius: 4px;
		padding: 1rem;
		background: rgba(0, 212, 255, 0.05);
		text-align: center;
	}

	.stat-box.main-stat {
		background: rgba(0, 212, 255, 0.1);
	}

	.stat-box label {
		display: block;
		font-size: 0.7rem;
		font-weight: bold;
		color: #00d4ff;
		text-transform: uppercase;
		letter-spacing: 1px;
		margin-bottom: 0.5rem;
		font-family: 'Courier New', monospace;
	}

	.stat-value-large {
		font-size: 2rem;
		color: #00ffff;
		font-weight: bold;
		font-family: 'Courier New', monospace;
		text-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
	}

	.stat-value {
		font-size: 1.75rem;
		color: #00ffff;
		font-weight: bold;
		font-family: 'Courier New', monospace;
		text-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
	}

	.stats-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 1rem;
	}

	@media (max-width: 968px) {
		.sheet-top {
			grid-template-columns: 1fr;
		}

		.info-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (max-width: 480px) {
		.info-grid {
			grid-template-columns: 1fr;
		}

		.stats-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
